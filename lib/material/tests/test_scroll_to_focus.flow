import material/tests/material_test_utils;

main() {
	MGrid([
		[
			MScroll(
				MLines(
					generate(0, 20, \i -> {
						style = if (i == 15) [TTextInputFocus(make(true))] else [];
						MTextInput(make(i2s(i)), [], style)
						// |> rotate180NoMisplace
					})
				),
				TFixed(200., 300.),
				[
					// MReverseMouseWheel(),
					// MScrollBarStart()
				]
			)
			// |> rotate180NoMisplace
			|> (\f -> MTranslate(const(Point(100.0, 100.0)), f)),
			MScroll(
				MLines(
					generate(0, 20, \i -> {
						style = if (i == 15) [TTextInputFocus(make(true))] else [];
						MTextInput(make(i2s(i)), [], style)
						|> rotate180NoMisplace
					})
				),
				TFixed(200., 300.),
				[
					// MReverseMouseWheel(),
					// MScrollBarStart()
				]
			)
			// |> rotate180NoMisplace
			|> (\f -> MTranslate(const(Point(100.0, 100.0)), f))
		],
		[
			MScroll(
				MLines(
					generate(0, 20, \i -> {
						style = if (i == 15) [TTextInputFocus(make(true))] else [];
						MTextInput(make(i2s(i)), [], style)
						// |> rotate180NoMisplace
					})
				),
				TFixed(200., 300.),
				[
					MReverseMouseWheel(),
					MScrollBarStart()
				]
			)
			|> rotate180NoMisplace
			|> (\f -> MTranslate(const(Point(100.0, 100.0)), f)),
			MScroll(
				MLines(
					generate(0, 20, \i -> {
						style = if (i == 15) [TTextInputFocus(make(true))] else [];
						MTextInput(make(i2s(i)), [], style)
						|> rotate180NoMisplace
					})
				),
				TFixed(200., 300.),
				[
					MReverseMouseWheel(),
					MScrollBarStart()
				]
			)
			|> rotate180NoMisplace
			|> (\f -> MTranslate(const(Point(100.0, 100.0)), f))
		]
	])
	|> debugRender
}

rotate180NoMisplace(m : Material) -> Material {
	MRotate(const(180.0), MShift(MDisplay("m"), MGhost("m")))
		|> (\f -> MLet("m", m, f));
}